// Oracle for revealing session keys
rule ORevealSessionKey:
  [
    !SessionKey(tid, stage, key)
  ]
  --[
    RevealedSessionKey(tid, stage)
  ]->
  [
    Out(key)
  ]

// Oracle for revealing long-term keys
rule OCorruptLTK:
  [
    !Ltk($B, pk_B, sk_B)
  ]
  --[
    CorruptedLTK($B)
  ]->
  [
    Out(sk_B)
  ]
